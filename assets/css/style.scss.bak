---
# Only the main Sass file needs front matter (the dashes are enough)
---

@import
  "minima/skins/{{ site.minima.skin | default: 'classic' }}",
  "minima/initialize";
  
.circular-image {
  border-radius: 50%; /* make the corners rounded */
  width: 150px; /* set the width of the image */
  height: 150px; /* set the height of the image */
  object-fit: cover; /* scale the image to fit within the border */
}

.image-container {
  display: flex;
  justify-content: center;
}

.image-container figure img {
	 margin: 10pt 40pt;
}

figure figcaption {
  text-align: center;
}

.sponsor-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}


.sponsor-container img {
    width: 30%;
  margin: 10px;
}


.header-container {
  display: flex;
  align-items: center;
}

.logo-container {
  height: 1px; /* set the height of the logo container */
  margin-right: auto;
  width: 25%; 
}


.logo {
  vertical-align: middle; /* align the logo vertically within the logo container */
  width: 100%;
}

.menu-container {
  height: 1px; /* set the height of the logo container */
  margin-left: auto;
  width: 75%; 
}

.menu-container a {
  vertical-align: middle; /* align the menu links vertically within the menu container */
}

.header {
  text-align: left;
}

.presenter-info {
  display: flex;
  align-items: center;
  margin: 10px;
}

.presenter-info-container {
  display: flex;
  align-items: left;
  flex-direction: column;
  margin-left: 1em;
}

.intervention-abstract {
  text-align: justify;
}


.social-media-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
}

.social-media-list li:first-child {
  margin-left: 0;
}

.footer-logo {
  float: right;
  margin-top: 10px;
}

.footer-logo img {
  width: 150px;
}

.clearfix:before,
.clearfix:after {
  content: "";
  display: table;
}

.clearfix:after {
  clear: both;
}


.intervention-title-and-links {
  display: flex;
  align-items: center;
}

.intervention-links {
  margin-left: auto;
}

.intervention-link {
  margin-left: 10px;
  font-size: medium;
}

.justified {
  text-align: justify;
}

p {
  text-align: justify;
}

